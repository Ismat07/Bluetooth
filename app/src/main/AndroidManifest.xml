<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ismatkhanam.bluetooth_messenger">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FrontActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ismatkhanam.bluetooth_messenger.ClientActivity"
            android:label="@string/title_activity_client" >
        </activity>
        <activity
            android:name="com.example.ismatkhanam.bluetooth_messenger.ConnectedActivity"
            android:label="@string/title_activity_connected" >
        </activity>
        <activity
            android:name="com.example.ismatkhanam.bluetooth_messenger.ServerActivity"
            android:label="@string/title_activity_server" >
        </activity>
    </application>

</manifest>